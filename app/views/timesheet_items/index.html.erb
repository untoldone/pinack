<h1>Listing timesheet_items</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Hours</th>
      <th>Notes</th>
      <th>Billed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timesheet_items.each do |timesheet_item| %>
      <tr>
        <td><%= timesheet_item.date %></td>
        <td><%= timesheet_item.hours %></td>
        <td><%= timesheet_item.notes %></td>
        <td><%= timesheet_item.billed %></td>
        <td><%= link_to 'Show', timesheet_item %></td>
        <td><%= link_to 'Edit', edit_timesheet_item_path(timesheet_item) %></td>
        <td><%= link_to 'Destroy', timesheet_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

